<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    <environment include="Production">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
    <environment include="Development">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

</head>
<body>
    <div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Strona główna</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Programowanie">Programowanie</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Podroz">Podróż</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Fotografia">Fotografia</a>
            <a asp-controller="Panel" asp-action="Index">Panel administrowania</a>

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Panel" asp-action="Edit">Dodaj publikację</a>
                <a asp-controller="Auth" asp-action="Logout">Wyloguj się</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Zaloguj się</a>
            }
        </nav>
    </div>
    
    <div>
        @RenderBody()
    </div>

    @RenderSection("scripts", false)

    <footer>
        (c) Dmytro Martsynenko 2022
    </footer>
</body>
</html>
