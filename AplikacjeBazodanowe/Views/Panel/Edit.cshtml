@model PostViewModel

@{

}

<div class="editpost-form-container">
    <form method="post" asp-controller="Panel" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Tytuł</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Opis</label>
            <input asp-for="Description" />
        </div>
        <div>
            <label>Etykiety</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>Kategorie</label>
            <select asp-for="Category">
                <option value="Podroz">Podróż</option>
                <option value="Programowanie">Programowanie</option>
                <option value="Fotografia">Fotografia</option>
            </select>
        </div>
        <div>
            <label>Treść</label>
            <textarea asp-for="Body" id="editor"></textarea>
        </div>
        <div>
            <label>Zdjęcie</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" title="Wgraj zdjęcie" accept=".jpg,.jpeg,.png" />
        </div>
        <div>
            <input type="submit" value="Utwórz / Zmień publikację" />
        </div>
    </form>
</div>

@section scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.18.0/trumbowyg.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Trumbowyg/2.18.0/ui/trumbowyg.min.css" />

    <script>
        $('#editor').trumbowyg();
    </script>
}